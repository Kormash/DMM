@page "/monsters"
@using Blazority

<body>
    <div style="width:100%;height:60px;border-bottom: 2px solid darkred;">
        <div style="float:right;">
            <Button>Create Monster</Button>
        </div>
    </div>

    <div style="padding-top:12px; margin:auto; width:80%;">

        @foreach(var m in MonsterList)
        {
        <div class="MonsterDivSize hoverOutline" style="border:2px solid green" @onclick="() => MonsterDetails(m)">
            <div style="margin-top:6px;">
                <b style="color:black;">@m.name</b>
            </div>
        </div>
        <div hidden="@m.hidden" style="border:2px solid blue; float:left; padding-left:24px; padding-right:24px;padding-bottom:24px; padding-top:36px; width:90%">
            <div style="background-image: url('/images/parchment.png'); float:left; border:2px solid red;">
                @m.name
            </div> 
        </div>
        }
    </div>

</body>
