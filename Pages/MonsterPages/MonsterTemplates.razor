@page "/monsters"
@using Blazority

<body>
    <div style="width:100%;height:60px;border-bottom: 2px solid darkred;">
        <div style="float:right;">
            <Button>Create Monster</Button>
        </div>
    </div>

    <div style="padding-top:12px;">

        @foreach(var m in MonsterList)
        {
        <div class="MonsterDivSize hoverOutline" style="text-align:center;" @onclick="() => NavigateToMonster(m.url)">
            <div style="margin-top:6px;">
                <b style="color:black;">@m.name</b>
            </div>
        </div>
        }
    </div>

</body>
